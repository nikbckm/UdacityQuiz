<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.quiz.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/code"
            android:scaleType="centerCrop"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Management Info Systems Quiz"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:textSize="20sp"
             />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:orientation="vertical">



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="What does SaaS stand for?"
                android:layout_marginTop="16dp"
                android:textSize="20sp"
                />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RadioButton
                    android:id="@+id/correctAnswer1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Software as a Service"
                    android:textSize="18sp"/>
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Singing an awesome Song"
                    android:textSize="18sp"/>
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Software at a Salesrate"
                    android:textSize="18sp"/>
            </RadioGroup>



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="What is the most common programming language to access and modify databases? "
                android:layout_marginTop="16dp"
                android:textSize="20sp"
                />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="HTML"
                    android:textSize="18sp"/>
                <RadioButton
                    android:id="@+id/correctAnswer2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SQL"
                    android:textSize="18sp"/>
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Python"
                    android:textSize="18sp"/>
            </RadioGroup>



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Which kind of database model do exist? (2 correct answers!)"
                android:layout_marginTop="16dp"
                android:textSize="20sp"
                />

            <CheckBox
                android:id="@+id/correctAnswer3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Relational model"
                android:textSize="18sp"/>
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fast model"
                android:textSize="18sp"/>
            <CheckBox
                android:id="@+id/correctAnswer4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="Document model"/>



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="What does SQL stand for?"
                android:layout_marginTop="16dp"
                android:textSize="20sp"
                />

            <EditText
                android:id="@+id/editTextQuestion"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:inputType="text"/>



            <Button
                android:layout_marginTop="32dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Check my answers!"
                android:onClick="checkAnswers"/>

            <TextView
                android:id="@+id/scoreTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_marginTop="16dp"
                android:textSize="20sp"
                />


        </LinearLayout>

    </LinearLayout>
</ScrollView>